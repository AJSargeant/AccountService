@model AccountModel.User

<h4>User</h4>
<hr />
<div class="row">
    @using (Html.BeginForm("EditProfilePost", "User", FormMethod.Post))
    {
        <fieldset>
            <dl class="dl-horizontal">
                @Html.HiddenFor(model => model.Active)
                @Html.HiddenFor(model => model.Authorised)
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.UserID)
            </dl>
            <div class="col-md-4">
                <form asp-action="EditProfile">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>

        </fieldset>
    }
</div>
<div>
    @Html.ActionLink("Back to Profile", "Profile", new { id = Model.UserID })
</div>